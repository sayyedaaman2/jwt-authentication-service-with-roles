{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "nodenext",
        "target": "esnext",
        "moduleResolution": "nodenext",

        "types": ["node"],
        "esModuleInterop": true,

        "sourceMap": true,

        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
